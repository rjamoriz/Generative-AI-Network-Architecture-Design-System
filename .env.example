# ============================================================================
# Environment Configuration Template
# Copy this file to .env and fill in your actual values
# NEVER commit .env file with real credentials to version control
# ============================================================================

# ============================================================================
# APPLICATION SETTINGS
# ============================================================================
APP_NAME="Network Architecture Design System"
ENVIRONMENT=development  # Options: development, staging, production
DEBUG=false
LOG_LEVEL=INFO  # Options: DEBUG, INFO, WARNING, ERROR, CRITICAL
API_VERSION=v1

# API Server Configuration
HOST=0.0.0.0
PORT=8000
RELOAD=true
WORKERS=4

# ============================================================================
# SECURITY SETTINGS
# ============================================================================
# IMPORTANT: Generate strong random keys for production
# Example: python -c "import secrets; print(secrets.token_urlsafe(32))"
JWT_SECRET_KEY=your-super-secret-jwt-key-change-this-in-production
JWT_ALGORITHM=HS256
JWT_EXPIRATION_MINUTES=60
API_KEY_SALT=your-random-salt-change-this-in-production

# CORS Configuration
CORS_ORIGINS=["http://localhost:3000","http://localhost:8000"]

# ============================================================================
# LLM PROVIDER CREDENTIALS
# ============================================================================
# OpenAI Configuration
# Get your API key from: https://platform.openai.com/api-keys
OPENAI_API_KEY=sk-your-openai-api-key-here
OPENAI_MODEL=gpt-4
OPENAI_TEMPERATURE=0.7
OPENAI_MAX_TOKENS=4096
OPENAI_TIMEOUT=60
OPENAI_MAX_RETRIES=3

# Anthropic Claude Configuration
# Get your API key from: https://console.anthropic.com/
ANTHROPIC_API_KEY=sk-ant-your-anthropic-api-key-here
ANTHROPIC_MODEL=claude-3-5-sonnet-20241022
ANTHROPIC_TEMPERATURE=0.7
ANTHROPIC_MAX_TOKENS=4096
ANTHROPIC_TIMEOUT=60

# ============================================================================
# DATABASE CREDENTIALS - PostgreSQL
# ============================================================================
POSTGRES_HOST=localhost
POSTGRES_PORT=5432
POSTGRES_DB=network_design_db
POSTGRES_USER=postgres
POSTGRES_PASSWORD=your-postgres-password-here
POSTGRES_POOL_SIZE=10
POSTGRES_MAX_OVERFLOW=20

# ============================================================================
# VECTOR DATABASE CREDENTIALS
# ============================================================================
# Vector Store Provider (mongodb or datastax)
VECTOR_STORE_PROVIDER=mongodb

# Option 1: MongoDB Atlas Vector Search
# Get connection string from: https://cloud.mongodb.com/
MONGODB_URI=mongodb+srv://username:password@cluster.mongodb.net/?retryWrites=true&w=majority
MONGODB_DATABASE=network_vectors
MONGODB_COLLECTION=design_embeddings
MONGODB_TIMEOUT=10000

# Option 2: DataStax Astra DB (Alternative to MongoDB)
# Get credentials from: https://astra.datastax.com/
DATASTAX_TOKEN=your-datastax-token-here
DATASTAX_ENDPOINT=https://your-database-id-your-region.apps.astra.datastax.com

# ============================================================================
# External Database Connections (Historical Design Data)
# ============================================================================

# External PostgreSQL (for historical validated designs)
EXTERNAL_POSTGRES_HOST=external-db.example.com
EXTERNAL_POSTGRES_PORT=5432
EXTERNAL_POSTGRES_DB=network_designs_history
EXTERNAL_POSTGRES_USER=readonly_user
EXTERNAL_POSTGRES_PASSWORD=  # Set via secrets manager

# External MongoDB (for historical design documents)
EXTERNAL_MONGO_URI=mongodb://external-mongo.example.com:27017
EXTERNAL_MONGO_DB=historical_designs
EXTERNAL_MONGO_USER=readonly_user
EXTERNAL_MONGO_PASSWORD=  # Set via secrets manager

# External Oracle (for enterprise design repository)
EXTERNAL_ORACLE_DSN=external-oracle.example.com:1521/ORCL
EXTERNAL_ORACLE_USER=readonly_user
EXTERNAL_ORACLE_PASSWORD=  # Set via secrets manager

# Historical Data Settings
HISTORICAL_DATA_ENABLED=false
HISTORICAL_DATA_SOURCE=postgresql  # postgresql, mongodb, oracle
HISTORICAL_DATA_CACHE_TTL=3600  # Cache historical queries for 1 hour

# ============================================================================
# REDIS CREDENTIALS
# ============================================================================
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=your-redis-password-if-any
REDIS_DB=0
REDIS_POOL_SIZE=10
REDIS_TIMEOUT=5

# ============================================================================
# EMBEDDING SETTINGS
# ============================================================================
EMBEDDING_MODEL=text-embedding-3-large
EMBEDDING_DIMENSIONS=1536
EMBEDDING_BATCH_SIZE=100

# ============================================================================
# RAG (Retrieval-Augmented Generation) SETTINGS
# ============================================================================
RAG_TOP_K=5
RAG_SIMILARITY_THRESHOLD=0.75
RAG_MAX_CONTEXT_TOKENS=8000

# ============================================================================
# VALIDATION SETTINGS
# ============================================================================
VALIDATION_THRESHOLD=0.85
MAX_DESIGN_ITERATIONS=10

# ============================================================================
# MCP SERVER CREDENTIALS (External API Connections)
# ============================================================================
# Legacy Database MCP Server
MCP_LEGACY_DB_URL=http://localhost:8001
MCP_LEGACY_DB_API_KEY=your-legacy-db-api-key-here

# Web Application MCP Server
MCP_WEB_APP_URL=http://localhost:8002
MCP_WEB_APP_API_KEY=your-web-app-api-key-here

# MCP Server Settings
MCP_TIMEOUT=30
MCP_MAX_RETRIES=3

# ==========================================================================
# SALESFORCE - TECHNICAL VALIDATION SOURCE
# ==========================================================================
SALESFORCE_ENABLED=false
SALESFORCE_LOGIN_URL=https://login.salesforce.com
SALESFORCE_INSTANCE_URL=
SALESFORCE_CLIENT_ID=
SALESFORCE_CLIENT_SECRET=
SALESFORCE_USERNAME=
SALESFORCE_PASSWORD=
SALESFORCE_SECURITY_TOKEN=
SALESFORCE_ACCESS_TOKEN=
SALESFORCE_API_VERSION=v60.0
SALESFORCE_VALIDATION_SOQL=SELECT Id, Name FROM Technical_Validation__c LIMIT 100

# ============================================================================
# CELERY TASK QUEUE
# ============================================================================
CELERY_BROKER_URL=redis://localhost:6379/0
CELERY_RESULT_BACKEND=redis://localhost:6379/0

# ============================================================================
# MONITORING & OBSERVABILITY
# ============================================================================
# LangSmith (LLM Observability)
# Get API key from: https://smith.langchain.com/
LANGSMITH_API_KEY=your-langsmith-api-key-here
LANGSMITH_PROJECT=network-design-ai
ENABLE_TRACING=false

# ============================================================================
# SECRETS MANAGEMENT (Optional - for Production)
# ============================================================================
# HashiCorp Vault Configuration
USE_VAULT=false
VAULT_URL=https://vault.example.com:8200
VAULT_TOKEN=your-vault-token-here
VAULT_MOUNT_POINT=secret

# ============================================================================
# NOTES
# ============================================================================
# 1. NEVER commit this file with real credentials to version control
# 2. Use strong, randomly generated keys for production
# 3. Rotate credentials regularly
# 4. Consider using a secrets management service (Vault, AWS Secrets Manager)
# 5. At minimum, set these required variables:
#    - One LLM provider API key (OPENAI_API_KEY or ANTHROPIC_API_KEY)
#    - PostgreSQL credentials (POSTGRES_*)
#    - One vector database (MONGODB_URI or ASTRA_DB_TOKEN)
#    - JWT_SECRET_KEY and API_KEY_SALT (for production)
# ============================================================================
